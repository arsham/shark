{
  "Refactor": {
    "prefix": ["ref"],
    "body": ["ref(${1:scope}): ${2:title}"],
    "description": "Refactoring code"
  },
  "Revert": {
    "prefix": ["revert"],
    "body": ["revert(${1:scope}): ${2:title}"],
    "description": "Reverts a previous commit"
  },
  "Add": {
    "prefix": ["add"],
    "body": ["add(${1:scope}): ${2:title}"],
    "description": "Add capability"
  },
  "Breaking": {
    "prefix": ["breaking"],
    "body": ["breaking(${1:scope}): ${2:title}"],
    "description": "Breaking changes"
  }
}
